<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.cse.nolanburfield.assignment3.Friend"
    android:onClick="onRequest">

    <TextView android:text="Friend" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request"
        android:width="200dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:hint="Friend Request" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:id="@+id/button10"
        android:layout_below="@+id/request"
        android:layout_alignLeft="@+id/request"
        android:layout_alignStart="@+id/request"
        android:layout_alignRight="@+id/request"
        android:layout_alignEnd="@+id/request" />

</RelativeLayout>
